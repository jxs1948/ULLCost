@model IEnumerable<ULLCost.Models.Movie>
@{
    ViewData["Title"] = "Index";
}

<center>
    <h2 style="color:#800000">Cost Estimator</h2>
</center>
<!--
<p>
    <a asp-action="Create">Create New</a>
</p>
